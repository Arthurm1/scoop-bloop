{
  "version": "1.2.5",
  "url": "https://github.com/scalacenter/bloop/releases/download/v1.2.5/install.py",
  "depends": "python",
  "bin": "bloop.cmd",
  "env_add_path": "$dir",
  "env_set": {
    "HOME": "$dir",
    "SCOOP": "true"
  },
  "installer": {
    "script": "python $dir/install.py --dest $dir"
  }
}
        